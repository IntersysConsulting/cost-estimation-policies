import "tfrun"
import "tfplan"

types = {
    "demo-site-prod": "t2.large",
    "demo-site-dev": "t2.micro",
}

workspace_name = tfrun.workspace.name
desired_instance_type = types[workspace_name]

configured_instance_type = tfplan.resources.aws_instance.web.instance_type

main = rule {
    desired_instance_type == configured_instance_type
}